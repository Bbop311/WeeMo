{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">
    <p>Hello {{ app.user.firstName }} !</p>
    {% for listing in listings %}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">{{listing.listingTitle }}</h5>
          <h6 class="card-subtitle mb-2 text-muted">		<img src="{{asset('images/imglisting1.jpeg')}}" alt="image" class="image d-block w-100"></h6>
          <p class="card-text">{{ listing.listingDescription }}</p>
          <a href="{{ path('listing_validation', {listing_id : listing.id})}}" class="card-link">Validation page</a>
          <a href="#" class="card-link">Another link</a>
        </div>
      </div>
    {% endfor %}
</div>
{% endblock %}
