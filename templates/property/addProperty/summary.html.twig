{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5 mb-5">
        <h2 class="mb-4">Résumé de l'annonce</h2>

        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">{{ step3_data.listing_title }}</h5>
                <p class="card-text">{{ step3_data.listing_description }}</p>
                <p class="card-text"><strong>Image URL:</strong> {{ step3_data.img_url ?: 'Aucune image fournie' }}</p>
            </div>
        </div>

        <h3 class="mb-3">Étape 1</h3>
        <div class="row mb-3">
            <div class="col-md-4"><strong>Numéro Voie:</strong> {{ step1_data.no_voie }}</div>
            <div class="col-md-4"><strong>Type Voie:</strong> {{ step1_data.type_voie }}</div>
            <div class="col-md-4"><strong>Complément d'adresse:</strong> {{ step1_data.b_t_q }}</div>
            <div class="col-md-4"><strong>Voie:</strong> {{ step1_data.voie }}</div>
            <div class="col-md-4"><strong>Code Postale:</strong> {{ step1_data.code_postal }}</div>
            <div class="col-md-4"><strong>Nombre de pièces:</strong> {{ step1_data.nb_pieces }}</div>
            <div class="col-md-4"><strong>Surface du bien m²:</strong> {{ step1_data.surface_reelle_bati }}</div>
        </div>

        <h3 class="mb-3">Étape 2</h3>
        <div class="row mb-3">
            <div class="col-md-4"><strong>Nombre de chambres:</strong> {{ step2_data.number_of_bedrooms }}</div>
            <div class="col-md-4"><strong>Etage:</strong> {{ step2_data.floor }}</div>
            <div class="col-md-4"><strong>Type chauffage:</strong> {{ step2_data.heating_type }}</div>
            <div class="col-md-4"><strong>Etat du bien:</strong> {{ step2_data.property_condition }}</div>
            <div class="col-md-4"><strong>Ascenseur:</strong> {{ step2_data.elevator ? 'Oui' : 'Non' }}</div>
            <div class="col-md-4"><strong>Balcon:</strong> {{ step2_data.balcony ? 'Oui' : 'Non' }}</div>
            <div class="col-md-4"><strong>Parking:</strong> {{ step2_data.parking ? 'Oui' : 'Non' }}</div>
            <div class="col-md-4"><strong>Climatisation:</strong> {{ step2_data.air_condition ? 'Oui' : 'Non' }}</div>
            <div class="col-md-4"><strong>Classe énergétique:</strong> {{ step2_data.energy_class }}</div>
        </div>

        <h3 class="mb-3">Étape 3</h3>
        <div class="row mb-3">
            <div class="col-md-12"><strong>Titre:</strong> {{ step3_data.listing_title }}</div>
            <div class="col-md-12"><strong>Description:</strong> {{ step3_data.listing_description }}</div>
            <div class="col-md-12"><strong>Image URL:</strong> {{ step3_data.img_url ?: 'Aucune image fournie' }}</div>
        </div>

        <h3 class="mb-3">Étape 4</h3>
        <div class="row mb-3">
            <div class="col-md-6"><strong>Valeur foncière:</strong> {{ step4_data.valeur_fonciere }}</div>
            <div class="col-md-6"><strong>Numéro de téléphone:</strong> {{ step4_data.phone_number }}</div>
        </div>

        {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
        <div class="col-12">
            
        </div>
        {{ form_end(form) }}

        <div class="mt-4">
           
            <a href="{{ path('app_add_property_step1') }}" class="btn btn-secondary">Retour à l'étape 1</a>
            <a href="{{ path('app_add_property_step2') }}" class="btn btn-secondary">Retour à l'étape 2</a>
            <a href="{{ path('app_add_property_step3') }}" class="btn btn-secondary">Retour à l'étape 3</a>
            <a href="{{ path('app_add_property_step4') }}" class="btn btn-secondary">Retour à l'étape 4</a>
            
        </div>
    </div>
{% endblock %}
