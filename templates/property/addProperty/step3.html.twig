            </div>

        </div>

        <div class="col-md-6">
            {{ form_label(form.img_url, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.img_url, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.img_url) }}
        </div>

        <div class="col-md-6">
            <div class="mb-3">
               
            </div>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Continuer</button>
        </div>

        {{ form_end(form) }}
    </div>

    
{% endblock %}
