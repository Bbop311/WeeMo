{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5 mb-5">
        <h2 class="mb-4">Ajouter une annonce - Ã©tape 3</h2>
        {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}

        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.listing_title, null, {'label_attr': {'class': 'form-label'}}) }}
